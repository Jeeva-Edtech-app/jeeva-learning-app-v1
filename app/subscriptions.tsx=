interface PlanCardProps {
  plan: SubscriptionPlan;
  onSelect: (plan: SubscriptionPlan) => void;
}

function PlanCard({ plan, onSelect }: PlanCardProps) {
  const formatPrice = (price: number) => {
    return `₹${price}`;
  };

  const getPlanColor = (color: string) => {
    return `${color}15`;
  };

  return (
    <View style={[styles.planCardWrapper, { borderColor: plan.popular ? plan.color : 'transparent' }]}>
      {plan.popular && (
        <View style={[styles.popularBadge, { backgroundColor: plan.color }]}>
          <Text style={styles.popularBadgeText}>MOST POPULAR</Text>
        </View>
      )}

      <LinearGradient
        colors={[getPlanColor(plan.color), '#FFFFFF']}
        style={styles.planCard}
      >
        <View style={styles.planHeader}>
          <View style={styles.planInfo}>
            <Text style={styles.planName}>{plan.name}</Text>
            <View style={styles.planPriceRow}>
              <Text style={styles.planPrice}>{formatPrice(plan.price)}</Text>
              <Text style={styles.planDuration}>for {plan.duration} days</Text>
            </View>
          </View>
          <View style={[styles.planIconCircle, { backgroundColor: plan.color }]}>
            <MaterialCommunityIcons name="crown" size={24} color="white" />
          </View>
        </View>

        <View style={styles.featuresList}>
          {plan.features.map((feature, index) => (
            <View key={index} style={styles.featureItem}>
              <View style={styles.featureBullet} />
              <Text style={styles.featureText}>{feature.text}</Text>
            </View>
          ))}
        </View>

        <TouchableOpacity
          style={[styles.selectButton, { backgroundColor: plan.color }]}
          onPress={() => onSelect(plan)}
        >
          <Text style={styles.selectButtonText}>Choose Plan</Text>
          <Ionicons name="chevron-forward" size={18} color="white" />
        </TouchableOpacity>
      </LinearGradient>
    </View>
  );
}


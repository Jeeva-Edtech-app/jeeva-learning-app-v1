{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*", "./*"],
      "@components/*": ["src/components/*", "components/*"],
      "@screens/*": ["src/screens/*"],
      "@hooks/*": ["src/hooks/*", "hooks/*"],
      "@utils/*": ["src/utils/*"],
      "@api/*": ["src/api/*"],
      "@types/*": ["src/types/*"],
      "@assets/*": ["src/assets/*", "assets/*"],
      "@constants/*": ["src/constants/*", "constants/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
